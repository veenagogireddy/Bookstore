@model IEnumerable<Textbook>
@{
    ViewData["Title"] = "SortView";
}

<h1>Tara Store - Sort View of Products</h1>
<table class="table table-dark">
    <thead>
        <tr>
            <th style="width:30%">
                <a asp-action="SortView" asp-route-sortOrder="@ViewData["NameSortParam"]">Textbook Name</a>
            </th>
            <th style="width:30%">
                <a asp-action="SortView" asp-route-sortOrder="@ViewData["PriceSortParam"]">Textbook Price</a>
            </th>
            <th style="width:65%">Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Name</td>
                <td style="text-align:right">@t.Price.ToString("c")</td>
                <td>@t.Course</td>

            </tr>
        }

    </tbody>
</table>
<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Sustainable Eco-Friendly Merchandise!</h5>
                    <p class="card-text">Support the Earth-Day Movement at the Bookstore</p>
                    <a href="#" class="btn btn-primary">Check It Out!</a>
                </div>
            </div>
        </div>
        <br>
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">$10 off on textbooks Editions 1 Year Old</h5>
                    <p class="card-text">Support the Earth-Day Movement at the Bookstore</p>
                    <a href="#" class="btn btn-primary">Check It Out!</a>
                </div>
            </div>

        </div>
        <br>
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Special ART  Kits ,$10 off on textbooks.</h5>
                    <p class="card-text">Support the Earth-Day Movement at the Bookstore</p>
                    <a href="#" class="btn btn-primary">Check It Out!</a>
                </div>
            </div>
        </div>


    </div>
</div>